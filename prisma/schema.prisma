generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  name         String?
  phoneNumber  String?
  password     String
  DebtorIn     Debtors[] @relation("UserDebtors")
  paidExpenses Expense[] @relation("UserExpensesPaid")
  groups       Group[]   @relation("UserGroups")
}

model Group {
  id       Int       @id @default(autoincrement())
  expenses Expense[]
  members  User[]    @relation("UserGroups")
}

model Expense {
  id          Int       @id @default(autoincrement())
  description String
  value       Float
  userId      Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  groupId     Int
  debtors     Debtors[]
  group       Group     @relation(fields: [groupId], references: [id])
  paidBy      User      @relation("UserExpensesPaid", fields: [userId], references: [id])
}

model Debtors {
  userId    Int
  expenseId Int
  expense   Expense @relation(fields: [expenseId], references: [id])
  user      User    @relation("UserDebtors", fields: [userId], references: [id])

  @@id([userId, expenseId])
}
